{
  "name": "@utima/eslint-config",
  "version": "0.8.0",
  "description": "Utima's extensible shared eslint-config. It contains opinionated rules for JavaScript and TypeScript projects including React, TailwindCSS, Next.JS, jest and more.",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "import": "./index.js"
    },
    "./configs": {
      "import": "./src/configs/index.js",
      "types": "./src/configs/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint './**/*.{js,ts,jsx,tsx,cjs,mjs}'",
    "changeset": "changeset add",
    "release": "npm run release:prepare && npm run release:push",
    "release:check": "test $(git branch --show-current) != 'main' && echo 'Switch to main branch, please.' && exit 1 || test \"`git status . --porcelain`\" && echo 'Uncommitted changes found. Aborting release.' && exit 1 || exit 0",
    "release:prepare": "changeset version && npm i --package-lock-only --ignore-scripts",
    "release:push": "git add . && git commit -m 'Publish' && changeset tag && git push --follow-tags",
    "release:rc:enter": "changeset pre enter rc",
    "release:rc:exit": "changeset pre exit",
    "release:publish": "changeset publish --no-git-tag"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2",
    "@next/eslint-plugin-next": "^13.5.4",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "globals": "^13.23.0",
    "prettier": "^3.0.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "eslint": "^8.50.0"
  },
  "peerDependencies": {
    "eslint": ">=8"
  }
}
